@model MbmStore.Models.Movie
<div class="row">
    <div class="col-md-2">
        <img class="img-responsive" src="/content/images/@Model.ImageUrl" style="width:300px" /> <br />
    </div>

    <div class="col-md-4">
        <strong>Title:</strong> @Model.Title  <br />
        <strong>Director: </strong>@Model.Director <br>
        <strong>Price: </strong>@String.Format("{0:0.00}", @Model.Price) <br /><br />

    </div>

    <div class="col-md-6">
        @*//adding Add to cart button to the movies*@

        @Html.Partial("AddToCartPartialView", Model)
    </div>
    </div>


